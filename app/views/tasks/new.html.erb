<div class="container">
  <h1>New Tasks</h1>

  <div>
    <%= form_with model: @task do |form| %>
      <%= form.label :title %>
      <%= form.text_field :title %>
      <%= form.label :details %>
      <%= form.text_field :details %>
      <%= form.submit %>
      <% end %>
  </div>
<hr>
  <%= link_to 'back', tasks_path, class: 'btn btn-sm btn-primary col-3' %>
</div>