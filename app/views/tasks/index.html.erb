  <div class="container">
  <h1>My Tasks</h1>
  <div>
    <% @tasks.each do |task| %>
      <p><%= check_box_tag task.id, '1', task.completed %><%= link_to task.title, task_path(task)%> </p>
      <%= link_to 'Edit a new task', edit_task_path(task), class: 'btn btn-sm btn-primary' %>
    <% end %>
    <hr>
    <%= link_to 'Add a new task', new_task_path, class: 'btn btn-sm btn-primary' %>
    
  </div>
</div>